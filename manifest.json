{
  "manifest_version": 3,
  "version": "1.0",
  "name": "Timer",
  "description": "set timer",
  "icons": {
    "16": "stopwatch.png",
    "48": "stopwatch.png",
    "128": "stopwatch.png"
  },
  "action": {
    "default_icon": "stopwatch.png",
    "default_title": "Timer",
    "default_popup": "index.html"
  },
  "permissions": ["storage", "alarms", "notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options/options.html"
}
